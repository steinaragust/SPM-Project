root = true

[*]
indent_style = space
indent_size = 4
insert_final_newline = true
trim_trailing_whitespace = true
end_of_line = lf
charset = utf-8

[*.{json,yml,yaml,html,css}]
indent_size = 2

[*.{md,rst}]
trim_trailing_whitespace = false
insert_final_newline = false

[*.{bat,ps1}]
indent_style = tab
